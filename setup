#!/bin/bash

curl -s https://raw.githubusercontent.com/germanespinosa/dependencies/main/build > /usr/local/bin/build
chmod +777 /usr/local/bin/build

curl -s https://raw.githubusercontent.com/germanespinosa/dependencies/main/build.py > /usr/local/bin/build.py
chmod +777 /usr/local/bin/build.py

curl -s https://raw.githubusercontent.com/germanespinosa/dependencies/main/install.py > /usr/local/bin/install.py
chmod +777 /usr/local/bin/install.py

mkdir /usr/local/share/cmake/extra-modules -p
curl -s https://raw.githubusercontent.com/germanespinosa/dependencies/main/dependencies.cmake > /usr/local/share/cmake/extra-modules/dependencies.cmake

export CMAKE_MODULE_PATH=/usr/local/share/cmake/extra-modules
